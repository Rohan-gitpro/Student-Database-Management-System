<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0"
	style="-fx-background-color: #f44336;"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.loginController">
	<children>
		<TextField fx:id="loginUsername" layoutX="193.0"
			layoutY="172.0" prefHeight="25.0" prefWidth="214.0"
			promptText="Username" style="-fx-background-color: #f5f5f5;">
			<font>
				<Font name="Britannic Bold" size="14.0" />
			</font>
		</TextField>
		<PasswordField fx:id="loginPassword" layoutX="193.0"
			layoutY="250.0" prefHeight="25.0" prefWidth="214.0"
			promptText="Password">
			<font>
				<Font name="Britannic Bold" size="14.0" />
			</font>
		</PasswordField>
		<ImageView fitHeight="26.0" fitWidth="29.0" layoutX="151.0"
			layoutY="172.0" pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="@icons/icons8-person-96.png" />
			</image>
		</ImageView>
		<ImageView fitHeight="26.0" fitWidth="29.0" layoutX="151.0"
			layoutY="250.0" pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="@icons/icons8-1password-24.png" />
			</image>
		</ImageView>
		<Label alignment="CENTER" layoutX="155.0" layoutY="83.0"
			prefHeight="40.0" prefWidth="291.0" text="LOGIN" textFill="#222020">
			<font>
				<Font name="Algerian" size="36.0" />
			</font>
		</Label>
		<Button fx:id="loginButton" layoutX="226.0" layoutY="324.0"
			mnemonicParsing="false" prefHeight="25.0" prefWidth="148.0"
			text="LOGIN">
			<font>
				<Font name="Arial Rounded MT Bold" size="18.0" />
			</font>
		</Button>
		<Label fx:id="incorrectlabel" layoutX="190.0" layoutY="388.0"
			prefHeight="34.0" prefWidth="274.0">
			<font>
				<Font name="Britannic Bold" size="14.0" />
			</font>
		</Label>
		<Button fx:id="signUpButton" layoutX="474.0" layoutY="14.0"
			mnemonicParsing="false" prefHeight="34.0" prefWidth="112.0"
			text="SIGN-UP">
			<font>
				<Font name="Arial Rounded MT Bold" size="18.0" />
			</font>
		</Button>
		<ImageView fitHeight="26.0" fitWidth="26.0" layoutX="433.0"
			layoutY="18.0" pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="@icons/icons8-sign-up-24.png" />
			</image>
		</ImageView>
	</children>
</AnchorPane>
